<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Class Information"
        android:textColor="#000000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="142dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="149dp"
        android:gravity="center_horizontal"
        android:text="Class Number:"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="134dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="75dp"
        android:gravity="center_horizontal"
        android:text="Class Name:"
        android:textColor="#000000"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/classNumber"
        android:layout_width="187dp"
        android:layout_height="39dp"
        android:layout_alignStart="@+id/className"
        android:layout_alignTop="@+id/textView3"
        android:hint="Class Number"
        android:textColor="#000000"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/className"
        android:layout_width="180dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView5"
        android:layout_marginEnd="84dp"
        android:hint="Class Name"
        android:textColor="#000000"
        android:textSize="22sp" />

    <ListView
        android:id="@+id/students_list"
        android:layout_width="match_parent"
        android:layout_height="225dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="185dp"
        android:background="@drawable/border" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="204dp"
        android:gravity="center"
        android:text="Students"
        android:textColor="#000000"
        android:textSize="22sp" />

    <Button
        android:id="@+id/toClasses"
        android:layout_width="162dp"
        android:layout_height="58dp"
        android:layout_alignBottom="@+id/deleteClass"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="31dp"
        android:text="Return to Class List(SAVE)" />

    <Button
        android:id="@+id/new_student"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="117dp"
        android:text="Add New Student" />

    <Button
        android:id="@+id/editNumber"
        android:layout_width="63dp"
        android:layout_height="39dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView3"
        android:layout_marginEnd="13dp"
        android:text="Edit" />

    <Button
        android:id="@+id/editName"
        android:layout_width="60dp"
        android:layout_height="39dp"
        android:layout_alignStart="@+id/editNumber"
        android:layout_alignTop="@+id/textView5"
        android:text="Edit" />

    <Button
        android:id="@+id/deleteClass"
        android:layout_width="162dp"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="31dp"
        android:text="Delete Class"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:text="Click to view information" />


</RelativeLayout>
